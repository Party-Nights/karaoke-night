{
	"eslint.validate": ["javascript", "svelte", "typescript"],
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"svelte.enable-ts-plugin": true,
	"[svelte]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// "css.validate": false,
	// "scss.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"editor.tabSize": 2,
	"editor.quickSuggestions": {
		"strings": "on"
	}
}
